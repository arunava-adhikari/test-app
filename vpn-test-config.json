  "vpnProviders": {
    "expressvpn": {
      "name": "ExpressVPN",
      "installInstructions": "Download from https://www.expressvpn.com/",
      "setupCommands": [
        "expressvpn activate [activation_code]",
        "expressvpn preferences set auto_connect false"
      ],
      "supportedCountries": ["US", "GB", "DE", "FR", "ES", "CA", "AU", "JP"]
    },
    
    "nordvpn": {
      "name": "NordVPN", 
      "installInstructions": "Download from https://nordvpn.com/",
      "setupCommands": [
        "nordvpn login",
        "nordvpn set autoconnect off"
      ],
      "supportedCountries": ["US", "GB", "DE", "FR", "ES", "CA", "AU", "JP"]
    },
    
    "surfshark": {
      "name": "Surfshark",
      "installInstructions": "Download from https://surfshark.com/",
      "setupCommands": [
        "surfshark-vpn login",
        "surfshark-vpn settings --auto-connect off"
      ],
      "supportedCountries": ["US", "GB", "DE", "FR", "ES", "CA", "AU"]
    },
    
    "protonvpn": {
      "name": "ProtonVPN",
      "installInstructions": "Download from https://protonvpn.com/",
      "setupCommands": [
        "protonvpn login [username]",
        "protonvpn configure"
      ],
      "supportedCountries": ["US", "GB", "DE", "FR", "ES", "CA", "CH", "NL"]
    },

    "eonvpn": {
      "name": "eonVPN Demo",
      "description": "Demo configuration optimized for eonVPN",
      "apiUrl": "http://localhost:8080",
      "vpnProvider": "eonvpn",
      "testCountries": ["US", "DE", "GB", "FR"],
      "blockedCountries": ["DE", "RU"],
      "headless": false,
      "slowMo": 1500,
      "timeout": 30000,
      "reportFile": "eonvpn-demo-report.json"
    }
  },
  
  "reporting": {
    "outputFormats": ["json", "html", "csv"],
    "includeScreenshots": true,
    "includeLogs": true,
    "emailReports": false,
    "slackNotifications": false
  },
  
  "advanced": {
    "retryFailedTests": 2,
    "parallelConnections": false,
    "connectionStabilityCheck": true,
    "ipLeakDetection": true,
    "dnsLeakDetection": true,
    "performanceMetrics": true
  }
