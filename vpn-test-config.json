{
  "testConfigurations": {
    "basic": {
      "name": "Basic VPN Test",
      "description": "Test core geo-blocking functionality",
      "apiUrl": "http://localhost:8080",
      "vpnProvider": "auto",
      "testCountries": ["US", "DE", "GB", "FR"],
      "blockedCountries": ["DE", "RU"],
      "headless": false,
      "slowMo": 1000,
      "timeout": 30000
    },
    
    "comprehensive": {
      "name": "Comprehensive VPN Test",
      "description": "Full test suite with multiple countries",
      "apiUrl": "http://localhost:8080", 
      "vpnProvider": "auto",
      "testCountries": ["US", "DE", "RU", "FR", "GB", "ES", "CN", "AU", "CA"],
      "blockedCountries": ["DE", "RU", "CN", "IR"],
      "headless": false,
      "slowMo": 800,
      "timeout": 45000
    },
    
    "compliance": {
      "name": "Compliance Testing",
      "description": "Test blocking of sanctioned countries",
      "apiUrl": "http://localhost:8080",
      "vpnProvider": "auto", 
      "testCountries": ["RU", "CN", "IR", "KP", "CU"],
      "blockedCountries": ["RU", "CN", "IR", "KP", "CU"],
      "headless": false,
      "slowMo": 1500,
      "timeout": 60000
    },
    
    "demo": {
      "name": "Live Demo",
      "description": "Optimized for live demonstrations",
      "apiUrl": "http://localhost:8080",
      "vpnProvider": "expressvpn",
      "testCountries": ["US", "DE", "ES"],
      "blockedCountries": ["DE"],
      "headless": false,
      "slowMo": 2000,
      "timeout": 30000,
      "reportFile": "demo-report.json"
