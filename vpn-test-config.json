    "ci": {
      "name": "Continuous Integration",
      "description": "Automated testing for CI/CD pipelines",
      "apiUrl": "http://localhost:8080",
      "vpnProvider": "auto",
      "testCountries": ["US", "DE", "FR"],
      "blockedCountries": ["DE"],
      "headless": true,
      "slowMo": 0,
      "timeout": 20000,
      "reportFile": "ci-test-report.json"
